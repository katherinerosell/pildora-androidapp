<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="edu.quinnipiac.pildora.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_nav_editmeds"
            app:destination="@id/nav_editmeds" />
        <action
            android:id="@+id/action_nav_home_to_nav_help"
            app:destination="@id/nav_help" />
    </fragment>

    <fragment
        android:id="@+id/nav_editmeds"
        android:name="edu.quinnipiac.pildora.ui.AddMedicationFragment"
        android:label="@string/menu_editAddPrescriptions"
        tools:layout="@layout/fragment_edit_add_meds" />

    <fragment
        android:id="@+id/nav_help"
        android:name="edu.quinnipiac.pildora.HelpFragment"
        android:label="@string/action_help"
        tools:layout="@layout/fragment_help" />

</navigation>